@model List<DataAccess.Entity.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="col-lg-6 pull-left ">Categories</div>
                <div class="col-lg-6 ">
                    <button class="btn btn-primary pull-right">Add Category</button>
                </div>
            </header>

            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> Category Name</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> Descrition</th>
                        <th><i class="icon-bookmark"></i> Profit</th>
                        <th><i class=" icon-edit"></i> Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryName</td>
                            <td>@category.Description</td>
                            <td>@TempData["urunSayisi"]</td>
                            <td>@category.Status</td>
                            
                            
                            <td>
                                <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                                <button class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </section>
    </div>
    
    </div>
